{
  "expo": {
    "name": "Pixory",
    "slug": "pixory",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/ic_launcher.png",
    "scheme": "pixory",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "bundleIdentifier": "com.devadiman.pixory"
    },
    "android": {
      "versionCode":3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ic_launcher_monochrome.png",
        "backgroundColor": "#813d9c",
        "monochromeImage": "./assets/images/ic_launcher_monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.devadiman.pixory",
      "permissions": [
        "android.permission.SET_WALLPAPER",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/ic_launcher-web.png"
    },
    "plugins": [
       "expo-router",
       [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/playstore-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "animation": {
            "type": "fade",
            "duration": 1000
          }
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      "react-native-edge-to-edge",
      "./plugins/withWallpaperFix"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true,
      "autolinkingModuleResolution":true
    },
    "extra": {
      "router": {
            "root": "./src/app"
      },
      "eas": {
        "projectId": "6c489d92-a70c-4b5f-aabf-143fb6676820"
      }
    }
  }
}
